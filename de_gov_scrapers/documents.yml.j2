name: {{ foreign_id }}
title: {{ name }}
description: >
  Documents scraped from the public website of {{ name }} ({{ domain }})
country: {{ country }}
category: library
coverage:
  frequency: daily
publisher:
  name: {{ name }}
  country: {{ country }}
  url: https://{{ domain }}
  official: true
maintainer:
  name: "||)Â·|()"
  url: https://investigativedata.io
content_type: documents

stealthy: true

pipeline:
  init:
    method: utils.operations:init
    handle:
      pass: seed

  seed:
    method: seed
    params:
      url: https://{{ domain }}
    handle:
      pass: fetch

  cached_emit:
    method: utils.operations:cached_emit
    handle:
      pass: fetch

  fetch:
    method: fetch
    params:
      rules:
        and:
          - or:
              - pattern: https://{{ domain }}.*
              - pattern: https://{{ domain | replace("www.", "") }}.*
          - not:
              or:
                - mime_group: assets
                - mime_group: images
    handle:
      pass: parse

  parse:
    method: parse
    params:
      store:
        or:
          - mime_group: archives
          - mime_group: documents
          - mime_group: media
    handle:
      store: store
      fetch: cached_emit

  store:
    method: utils.operations:store
